---
export type Props = {
  title?: string;
  summary?: string;
  tags?: string[];
  thumbnail?: string;
};

import { getAllCategories } from '../prismic';
const { title, summary, tags, thumbnail } = Astro.props;

const categories = await getAllCategories();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ?? 'Blog | Leveor'}</title>
    <meta
      name="description"
      content={summary ??
        "Leveor's blog - where we write about the stuff we do"}
    />
    {tags && <meta name="keywords" content={tags?.join(',') ?? ''} />}

    <meta property="og:url" content="https://blog.leveor.xyz" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={summary} />
    <meta property="og:image" content={thumbnail} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="https://blog.leveor.xyz" />
    <meta property="twitter:url" content="https://blog.leveor.xyz" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={summary} />
    <meta name="twitter:image" content={thumbnail} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;400;700&family=JetBrains+Mono:wght@300;700&family=Silkscreen&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="bg-[#131313] text-gray-50 pb-3 md:pb-6 lg:pb-12 px-6 md:px-12 lg:px-24"
  >
    <main class="min-h-screen">
      <nav
        class="flex flex-wrap justify-center md:justify-end items-center py-3 pb-6 md:pb-9 px-6"
      >
        <a href="/">
          <h1
            class="text-4xl font-bold text-center bg-gradient-to-r from-teal-400 via-sky-400 to-purple-400 bg-clip-text text-transparent pr-0 md:pr-6 pb-3 md:pb-0"
          >
            Blog | Leveor
          </h1>
        </a>

        <div class="flex text-md md:text-xl">
          {
            categories.map((c) => (
              <a
                class="relative pl-3 font-light before:inline-block before:pr-1
							before:content-['/'] first-of-type:pl-0 hover:bg-gradient-to-r
							hover:from-teal-400
							hover:via-sky-400 hover:to-purple-400 hover:bg-clip-text
							hover:text-transparent md:pl-6"
                href={`/category/${c.uid}`}
              >
                {c.data.title}
              </a>
            ))
          }
        </div>
      </nav>
      <slot />
    </main>

    <footer class="p-4 bg-[#131313] sm:p-6">
      <hr class="border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
      <div class="container md:flex md:justify-between mx-auto mt-3 md:mt-0">
        <p class="text-sm text-gray-400 text-center">
          &copy; <a
            href="https://leveor.xyz"
            target="_blank"
            class="hover:underline">Leveor</a
          >. All Rights Reserved.
        </p>
        <div class="flex justify-center mt-3 space-x-6 sm:mt-0">
          <a
            href="https://github.com/leveorxyz/"
            target="_blank"
            class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"></path>
            </svg>
          </a>
          <a
            href="https://www.linkedin.com/company/leveorxyz/"
            target="_blank"
            class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 448 512">
              <path
                fill="currentColor"
                d="M100.28 448H7.4V148.9h92.88zM53.79 108.1C24.09 108.1 0 83.5 0 53.8a53.79 53.79 0 0 1 107.58 0c0 29.7-24.1 54.3-53.79 54.3zM447.9 448h-92.68V302.4c0-34.7-.7-79.2-48.29-79.2-48.29 0-55.69 37.7-55.69 76.7V448h-92.78V148.9h89.08v40.8h1.3c12.4-23.5 42.69-48.3 87.88-48.3 94 0 111.28 61.9 111.28 142.3V448z"
              ></path>
            </svg>
          </a>
          <a
            href="https://twitter.com/leveorxyz"
            target="_blank"
            class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          >
            <svg
              class="w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
              >
              </path>
            </svg>
          </a>
        </div>
      </div>
    </footer>

    <style is:global>
      html {
        font-family: 'Inter', sans-serif;
      }
      time,
      pre,
      code {
        font-family: 'JetBrains Mono', monospace;
      }
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        font-family: 'Silkscreen', cursive;
        font-weight: 700;
        color: #fff;
      }

      p {
        line-height: 170%;
        font-weight: 400;
      }
    </style>
  </body>
</html>
